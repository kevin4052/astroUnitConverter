---

<Layout>
    <section>
        <div class="container">
            <h2>Unit Converter</h2>
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label for="unitType">Unit Type</label>
                        <select
                            name="unitType"
                            id="unitType"
                            class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label for="input">From</label>
                        <div>
                            <input
                                type="text"
                                id="input"
                                class="form-control"
                            />
                            <select id="selectFrom"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="output">To</label>
                        <div>
                            <input
                                type="text"
                                id="output"
                                readonly
                                class="form-control"
                            />
                            <select id="selectTo"></select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .card {
        width: 400px;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        display: flex;
        flex-direction: column;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: -webkit-fill-available;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
</style>

<script src="../scripts/common.ts"></script>
