---
interface Props {
  title: string;
  unitTypeList: string[];
}

const { title, unitTypeList }: Props = Astro.props;
---

<div class="section">
  <h2 id="title">{title}</h2>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <label for="input">From</label>
        <select id="selectFrom" class="form-control">
          {
            unitTypeList.map((unitType) => (
              <option value={unitType}>{unitType}</option>
            ))
          }
        </select>
      </div>
      <div class="form-group">
        <label for="output">To</label>
        <select id="selectTo" class="form-control">
          {
            unitTypeList.map((unitType) => (
              <option value={unitType}>{unitType}</option>
            ))
          }
        </select>
      </div>
      <div class="form-group">
        <label for="input">Amount</label>
        <input type="text" id="input" class="form-control" />
      </div>
      <div id="result-group" class="form-group">
        <label for="output">Result</label>
        <p id="output"></p>
      </div>
    </div>
  </div>
</div>

<script src="@scripts/type/singleType.ts"></script>
