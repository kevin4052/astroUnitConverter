---
import updownsvg from "@assets/up-down-solid.svg";

interface Props {
  title: string;
  type: string;
  from: string;
  to: string;
}

const { title, from, to, type }: Props = Astro.props;
---

<section>
  <div class="container">
    <h2 id="title">{title} Converter</h2>
    <div class="card">
      <div class="card-body">
        <div class="form-group">
          <label for="input">From {from}</label>
          <div>
            <input type="text" id="input" class="form-control" />
          </div>
        </div>
        <div id="reverse">
          <a id="switchLink" href=`/${type}/${to}-${from}`>
            <img src={updownsvg.src} height="20" alt="switch" />
          </a>
        </div>
        <div class="form-group">
          <label for="output">To {to}</label>
          <div>
            <input type="text" id="output" readonly class="form-control" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  #reverse {
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding: 0.5rem;
  }
</style>

<script src="@scripts/type/singleConversion.ts"></script>
