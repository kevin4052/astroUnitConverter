---
interface Props {
	title: string;
	unitTypeList: string[];
}

const { title, unitTypeList }: Props = Astro.props;
---

<section>
	<div class="container">
		<h2 id="title">{title} Converter</h2>
		<div class="card">
			<div class="card-body">
				<div class="form-group">
					<label for="input">From</label>
					<input type="text" id="input" class="form-control" />
					<select id="selectFrom">
						{
							unitTypeList.map((unitType) => (
								<option value={unitType}>{unitType}</option>
							))
						}
					</select>
				</div>
				<div class="form-group">
					<label for="output">To</label>
					<input
						type="text"
						id="output"
						readonly
						class="form-control"
					/>
					<select id="selectTo">
						{
							unitTypeList.map((unitType) => (
								<option value={unitType}>{unitType}</option>
							))
						}
					</select>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.form-group {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-between;
		gap: 10px;
	}
</style>
