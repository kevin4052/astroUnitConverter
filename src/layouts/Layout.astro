---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import unitData from "@data/unitData.ts";
import theme from "@styles/themeColors.ts";

const { primary, secondary, background, info } = theme;
const unitTypeList = Object.keys(unitData);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Unit Converter</title>
  </head>
  <body>
    <Header title="Unit Converter" unitTypeList={unitTypeList} />
    <div class="container">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style is:global define:vars={{ primary, secondary, background, info }}>
  html,
  body {
    margin: 0px;
    padding: 0px;
    width: 100%;
    height: 100%;
  }
  .container {
    padding: 1rem;
    min-height: 100vh;
  }

  .section {
    display: flex;
    flex-direction: column;
    margin: auto;
    max-width: 800px;
  }
  .card {
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    background-color: var(--background);
  }

  .card-body {
    display: flex;
    flex-direction: column;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 5px;
    margin-bottom: 1rem;
  }

  .form-control {
    width: -webkit-fill-available;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  .form-group p {
    margin: 0;
    color: var(--info);
    font-size: 1.2rem;
    font-weight: bold;
  }

  .form-control:focus {
    outline: none;
    border-color: var(--info);
  }

  #title {
    align-self: center;
  }

  @media (max-width: 480px) {
    .container {
      padding: 10px;
    }
  }

  @media (min-width: 640px) {
    .container {
      padding: 1rem 5rem;
    }
  }
</style>
